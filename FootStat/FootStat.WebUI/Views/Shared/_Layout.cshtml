<body id="home">
	<div id="wrapper">
	    <header style="min-height: 30px; background-color: #464646">
	        <a href="#" class="menuButton"><img src="../../Content/Img/menuButton.gif" /></a>
	        <h6 style="margin:5px;padding: 3px; border: 1px solid #3987D6; max-width: 120px;">
	            <a href="@Url.Action("Index")"><b style="color: #3399FF">Foot</b><b style="color: #6DB852">Bet</b></a>
                
	        </h6>
			
                
	        <nav>
	            <ul>
	            @foreach (var link in FootStat.WebUI.Models.LayoutHelper.tourneys()) {
	                <li>
	                    <a href="@Url.Action("Tourney", new { id = link.Id })">
	                        <img src="@link.CountryFlag" class="countryFlagMenu" alt="@link.ShortNameRu"/>@link.ShortNameRu 
	                    </a>
	                </li>
	            }
		        </ul>
	            <div class="clearfix"></div>
	        </nav>	
	    </header>
				
		<section id="main-content">
			@RenderBody()
		</section>	
		<hr/>
		<footer>
			<p></p>
		</footer>		
		
	</div>
	
